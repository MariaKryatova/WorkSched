<Window x:Class="WorkSched.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="380" Width="480" WindowStartupLocation="CenterOwner">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/><RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="140"/><ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <TextBlock Text="Логин:" VerticalAlignment="Center"/>
    <TextBox x:Name="txtLogin" Grid.Column="1" Margin="8,0,0,6"/>

    <TextBlock Grid.Row="1" Text="ФИО:" VerticalAlignment="Center"/>
    <TextBox x:Name="txtFullName" Grid.Row="1" Grid.Column="1" Margin="8,0,0,6"/>

    <TextBlock Grid.Row="2" Text="Пароль:" VerticalAlignment="Center"/>
    <PasswordBox x:Name="pwd1" Grid.Row="2" Grid.Column="1" Margin="8,0,0,6"/>

    <TextBlock Grid.Row="3" Text="Подтверждение:" VerticalAlignment="Center"/>
    <PasswordBox x:Name="pwd2" Grid.Row="3" Grid.Column="1" Margin="8,0,0,6"/>

    <TextBlock Grid.Row="4" Text="Отдел:" VerticalAlignment="Center"/>
    <ComboBox x:Name="cbDept" Grid.Row="4" Grid.Column="1" Margin="8,0,0,6"
              DisplayMemberPath="Name" SelectedValuePath="DepartmentId"/>

    <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Создать" Width="100" Margin="0,12,8,0" Click="OnCreate"/>
      <Button Content="Отмена" Width="90" Margin="0,12,0,0" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>
