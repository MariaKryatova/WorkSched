<Window x:Class="WorkSched.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сотрудник" Height="520" Width="860" WindowStartupLocation="CenterScreen"
        Background="#E6F3FF">
    <TabControl Background="#F0F8FF">
        <TabItem Header="Сегодня" Background="#D4EBF2">
            <Grid Margin="12" Background="#FAFDFF">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="Сегодня:" FontSize="16" FontWeight="Bold" Margin="0,0,16,0" Foreground="#4A6572"/>
                    <TextBlock x:Name="txtTodayPlan" Foreground="#4A6572"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,12">
                    <Button Content="Отметиться (Check-in)" Width="180" Margin="0,0,8,0" Click="OnCheckIn"
                  Background="#D4EBF2" Foreground="#4A6572" BorderBrush="#B8D4E3" FontWeight="SemiBold"/>
                    <Button Content="Уйти (Check-out)" Width="160" Click="OnCheckOut"
                  Background="#D4EBF2" Foreground="#4A6572" BorderBrush="#B8D4E3" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtTodayInfo" Margin="16,0,0,0" VerticalAlignment="Center" Foreground="#4A6572"/>
                </StackPanel>

                <TextBlock Grid.Row="2" Text="(Здесь позже появится мини-отчёт по последним явкам)" 
                   Foreground="#4A6572" FontStyle="Italic"/>
            </Grid>
        </TabItem>

        <TabItem Header="Мои заявки" Background="#D4EBF2">
            <DockPanel Background="#FAFDFF">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
                    <ComboBox x:Name="cbLeaveType" Width="140" Margin="0,0,8,0"
                    Background="White" Foreground="#4A6572" BorderBrush="#B8D4E3">
                        <ComboBoxItem Content="Vacation"/>
                        <ComboBoxItem Content="Sick"/>
                        <ComboBoxItem Content="Personal"/>
                    </ComboBox>
                    <DatePicker x:Name="dpStart" Margin="0,0,8,0"
                      Background="White" Foreground="#4A6572" BorderBrush="#B8D4E3"/>
                    <DatePicker x:Name="dpEnd" Margin="0,0,8,0"
                      Background="White" Foreground="#4A6572" BorderBrush="#B8D4E3"/>
                    <TextBox x:Name="tbReason" Width="200" Margin="0,0,8,0" ToolTip="Причина (необязательно)"
                   Background="White" Foreground="#4A6572" BorderBrush="#B8D4E3"/>
                    <Button Content="Подать" Width="100" Click="OnLeaveSubmit"
                  Background="#D4EBF2" Foreground="#4A6572" BorderBrush="#B8D4E3" FontWeight="SemiBold"/>
                </StackPanel>

                <DataGrid x:Name="gridMyLeaves" AutoGenerateColumns="False" Margin="8" IsReadOnly="True"
                  Background="White" BorderBrush="#B8D4E3" Foreground="#4A6572" HeadersVisibility="Column">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#D4EBF2"/>
                            <Setter Property="Foreground" Value="#4A6572"/>
                            <Setter Property="BorderBrush" Value="#B8D4E3"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding LeaveId}" Width="60"/>
                        <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="120"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                        <DataGridTextColumn Header="С" Binding="{Binding StartDate}" Width="120"/>
                        <DataGridTextColumn Header="По" Binding="{Binding EndDate}" Width="120"/>
                        <DataGridTextColumn Header="Причина" Binding="{Binding Reason}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </TabItem>
    </TabControl>
</Window>